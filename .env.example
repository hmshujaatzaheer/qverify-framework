# QVERIFY Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys (Required for LLM functionality)
# =============================================================================

# Anthropic API Key (for Claude models)
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (optional, for GPT models)
# Get yours at: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Optional Configuration
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
QVERIFY_LOG_LEVEL=INFO

# Cache directory for LLM responses
QVERIFY_CACHE_DIR=~/.qverify/cache

# Default LLM model
QVERIFY_LLM_MODEL=claude-3-5-sonnet-20241022

# Default LLM provider (anthropic, openai)
QVERIFY_LLM_PROVIDER=anthropic

# Verification timeout (seconds)
QVERIFY_VERIFICATION_TIMEOUT=30

# =============================================================================
# Development Settings
# =============================================================================

# Enable debug mode
QVERIFY_DEBUG=false

# Test mode (uses mock LLM)
QVERIFY_TEST_MODE=false
